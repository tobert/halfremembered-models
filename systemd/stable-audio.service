[Unit]
Description=Stable Audio Generation Service
After=network.target

[Service]
Type=exec
WorkingDirectory=%h/src/music-models/services/stable-audio
ExecStart=%h/.local/bin/uv run python server.py
Restart=on-failure
RestartSec=10

Environment=PYTHONUNBUFFERED=1

StandardOutput=journal
StandardError=journal
SyslogIdentifier=stable-audio

NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=default.target
